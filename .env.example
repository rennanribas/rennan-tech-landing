# Copy to .env and fill in. .env is gitignored.

# AWS Configuration (for GitHub Actions / ECR)
AWS_ACCOUNT_ID=your-aws-account-id
AWS_REGION=us-east-2
ECR_REPOSITORY_URI=your-account-id.dkr.ecr.us-east-2.amazonaws.com/rennan-tech-landing

# Application Configuration
PORT=5173
NODE_ENV=production

# Domain Configuration
DOMAIN_NAME=your-domain.com
SSL_EMAIL=your-email@domain.com

# Lightsail / EC2 (for local development/debugging)
EC2_HOST=your-lightsail-or-ec2-public-ip
EC2_USER=ubuntu
EC2_SSH_KEY=your-private-ssh-key
INSTANCE_ID=your-instance-id